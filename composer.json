{
    "name"              : "jbzoo/cck",
    "type"              : "project",
    "description"       : "Awesome CCK for Joomla CMS",
    "license"           : "proprietary",
    "minimum-stability" : "stable",
    "keywords"          : ["Joomla", "CCK", "JBZoo"],
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "config"            : {
        "vendor-dir"          : "src/jbzoo/vendor",
        "autoloader-suffix"   : "_JBZoo",
        "optimize-autoloader" : true
    },

    "require"           : {
        "php"               : ">=5.4",

        "jbzoo/assets"      : "1.x-dev",
        "jbzoo/console"     : "1.x-dev",
        "jbzoo/crosscms"    : "1.x-dev",
        "jbzoo/data"        : "1.x-dev",
        "jbzoo/event"       : "1.x-dev",
        "jbzoo/html"        : "1.x-dev",
        "jbzoo/image"       : "3.x-dev",
        "jbzoo/lang"        : "1.x-dev",
        "jbzoo/less"        : "1.x-dev",
        "jbzoo/path"        : "1.x-dev",
        "jbzoo/simpletypes" : "1.x-dev",
        "jbzoo/sqlbuilder"  : "1.x-dev",
        "jbzoo/utils"       : "1.x-dev",

        "pimple/pimple"     : "^3.0",
        "oyejorge/less.php" : "^1.7"
    },

    "require-dev"       : {
        "jbzoo/phpunit"       : "1.x-dev",
        "jbzoo/pimpledumper"  : "1.x-dev",
        "joomlatools/console" : "^1.4",
        "wp-cli/wp-cli"       : "^0.21"
    },

    "autoload"          : {
        "files"    : [
            "src/jbzoo/framework/defines.php"
        ],
        "classmap" : [
            "src/jbzoo/atoms"
        ],
        "psr-4"    : {
            "JBZoo\\CCK\\" : "src/jbzoo/framework"
        }
    },

    "support"           : {
        "forum" : "http://forum.jbzoo.com"
    }
}
