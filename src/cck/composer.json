{
    "name"              : "jbzoo/cck",
    "type"              : "project",
    "description"       : "Awesome CCK for Joomla and Wordpress CMS",
    "license"           : "proprietary",
    "minimum-stability" : "stable",
    "keywords"          : ["Joomla", "Wordpress", "CCK", "JBZoo"],
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"               : ">=5.4",
        "jbzoo/assets"      : "^1.1.4",
        "jbzoo/console"     : "^1.1.0",
        "jbzoo/crosscms"    : "1.x-dev",
        "jbzoo/data"        : "^1.4.1",
        "jbzoo/event"       : "^1.2.2",
        "jbzoo/html"        : "^1.0.0",
        "jbzoo/image"       : "^3.0.3",
        "jbzoo/jbdump"      : "^1.5.0",
        "jbzoo/lang"        : "^1.0.1",
        "jbzoo/less"        : "^1.0.3",
        "jbzoo/path"        : "^1.3.1",
        "jbzoo/profiler"    : "^1.0.5",
        "jbzoo/simpletypes" : "^1.4.2",
        "jbzoo/sqlbuilder"  : "^1.1.3",
        "jbzoo/utils"       : "1.x-dev",

        "pimple/pimple"     : "^3.0.2",
        "oyejorge/less.php" : "^1.7.0.10"
    },
    "require-dev"       : {
        "jbzoo/phpunit"           : "^1.5.12",
        "jbzoo/misc"              : "1.x-dev",
        "jbzoo/pimpledumper"      : "1.x.dev",

        "symfony/finder"          : "^2.8.5",
        "symfony/var-dumper"      : "^2.8.5",
        "phpunit/phpcov"          : "^2.0.2",
        "phpmetrics/phpmetrics"   : "^1.10",
        "jeremeamia/superclosure" : "^2.2",
        "joomlatools/console"     : "^1.4.6",
        "wp-cli/wp-cli"           : "^0.21.1"
    },

    "autoload"          : {
        "files" : [
            "framework/defines.php"
        ],
        "psr-4" : {
            "JBZoo\\CCK\\" : "framework"
        }
    },
    "autoload-dev"      : {
        "classmap" : [
            "../../tests/classes",
            "../../tests/unit"
        ]
    },

    "config"            : {
        "bin-dir"             : "../../bin",
        "vendor-dir"          : "../../vendor",
        "bin-compat"          : "full",
        "autoloader-suffix"   : "_JBZoo",
        "optimize-autoloader" : true
    }
}
